<h1>Homepages#index</h1>
<p>Find me in app/views/homepages/index.html.erb</p>

<%= search_form_for @q do |f| %>
  <%= f.search_field :name_or_description_cont, placeholder: "Search Products"%>
  <%= f.submit "search" %>
<% end %>

<% if @user %>
  <h1> Welcome <%= @user.name %></h1>

<% else %>
  <h1> Please log in </h1>
<% end %>

<% if flash[:notice] %>
  <p class="flash-notice">
    <%= flash[:notice] %>
  </p>
<% end %>
