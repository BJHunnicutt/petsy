  <h3> Welcome, <%= @user.name %>!</h3>
<% else %>
  <h3> Please log in </h3>
<% end %>

<%= search_form_for @q do |f| %>
  <%= f.search_field :name_or_description_cont, placeholder: "Search Products"%>
  <%= f.submit "search" %>
<% end %>
