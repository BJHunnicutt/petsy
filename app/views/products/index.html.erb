<h1>Pets</h1>

<section class="row small-up-1 medium-up-2 large-up-3" data-equalizer data-equalize-on="true">
<% if !@products.empty? %>
  <% @products.each do |product| %>
    <% if product.active %>
      <div class="column">
        <div class="callout">
          <h4><%= link_to(product.name, product_path(product.id)) %></h4>
          <p><%= number_to_currency(product.price/100) %></p>
          <image><%= image_tag(product.picture)%></image>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  Product not found.
<% end %>
</secton>
