<%# params %>

<h2>Your Order #<%= @order.id %> was successfully placed!</h2>

<table class="checkout">
  <th>
    Product
  </th>
  <th>
    Price
  </th>
  <% @order.order_products.each do |order_product| %>
    <tr>
      <td>
        <%= link_to order_product.product.name, product_path(order_product.product.id) %>
      </td>
      <td>
        <%= number_to_currency(order_product.product.price/100) %>
      </td>
      <td>
        <%= order_product.quantity %>
      </td>
    </tr>
  <% end %>
</table>

<h4>Total: <%= number_to_currency(@order.cart_total/100) %></h4>



